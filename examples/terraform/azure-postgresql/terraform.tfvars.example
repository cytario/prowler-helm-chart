# Azure Configuration
resource_group_name = "prowler-rg"
location            = "eastus"

# AKS Cluster Configuration
aks_cluster_name           = "prowler-aks"
aks_cluster_endpoint       = "https://prowler-aks-xxxxx.hcp.eastus.azmk8s.io:443"
aks_client_certificate     = "LS0tLS1CRUdJTi..."  # Base64 encoded
aks_client_key             = "LS0tLS1CRUdJTi..."  # Base64 encoded
aks_cluster_ca_certificate = "LS0tLS1CRUdJTi..."  # Base64 encoded

# Network Configuration
vnet_id   = "/subscriptions/xxxxx/resourceGroups/prowler-rg/providers/Microsoft.Network/virtualNetworks/prowler-vnet"
subnet_id = "/subscriptions/xxxxx/resourceGroups/prowler-rg/providers/Microsoft.Network/virtualNetworks/prowler-vnet/subnets/postgres-subnet"

# PostgreSQL Configuration
postgres_server_name            = "prowler-postgres"
postgres_version                = "16"
postgres_sku_name               = "GP_Standard_D2s_v3"
postgres_storage_mb             = 32768
postgres_database_name          = "prowler_db"
postgres_admin_username         = "prowleradmin"
postgres_admin_password         = ""  # Leave empty to auto-generate
postgres_backup_retention_days  = 7
postgres_geo_redundant_backup   = true
postgres_high_availability      = "ZoneRedundant"  # ZoneRedundant, SameZone, or "" for disabled

# Prowler Configuration
namespace        = "prowler"
create_namespace = true
release_name     = "prowler"

# Chart Configuration
# Option 1: Use local chart
chart_path = "../../../charts/prowler"

# Option 2: Use chart from repository (uncomment and configure)
# chart_repository = "https://your-helm-repo.com"
# chart_version    = "0.1.0"

# Application Scaling
api_replicas    = 2
ui_replicas     = 2
worker_replicas = 2

# Tags
tags = {
  Environment = "production"
  ManagedBy   = "terraform"
  Application = "prowler"
  Team        = "security"
}
