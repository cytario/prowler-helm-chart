# Kubernetes Configuration
kubeconfig_path = "~/.kube/config"
kube_context    = ""  # Leave empty for current context

# Prowler Configuration
namespace           = "prowler"
create_namespace    = true
release_name        = "prowler"
postgres_release_name = "prowler-postgres"

# Chart Configuration
# Option 1: Use local chart
chart_path = "../../../charts/prowler"

# Option 2: Use chart from repository (uncomment and configure)
# chart_repository = "https://your-helm-repo.com"
# chart_version    = "0.1.0"

# PostgreSQL Configuration
postgres_version        = "18.1.4"
postgres_database       = "prowler_db"
postgres_username       = "prowler"
postgres_admin_password = "change-this-admin-password"
postgres_app_password   = "change-this-app-password"

# Application Scaling
api_replicas    = 2
ui_replicas     = 2
worker_replicas = 2

# Storage Configuration
enable_postgres_persistence = true
enable_valkey_persistence   = false
storage_class               = ""  # Use default storage class, or specify: "gp2", "standard", etc.
